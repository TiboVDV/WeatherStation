<UserControl x:Class="WeatherStation.ExportDataPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeatherStation"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Border x:Name="btnExportData" BorderThickness="0" CornerRadius="5" Background="#FF0F9D58" MouseLeftButtonDown="btnExportData_MouseLeftButtonDown" Cursor="Hand" Margin="10,10,0,0" HorizontalAlignment="Left" Width="167" Height="32" VerticalAlignment="Top">
            <Label x:Name="btnOpenCloseConnectionLabel" Content="Export data" Margin="0,2" VerticalAlignment="Center" FontFamily="Roboto" Foreground="White" FontSize="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Right" Width="167"/>
        </Border>
    </Grid>
</UserControl>
